- content_for :header do
  = render_cell :manage_courses_breadcrumb, :design_form, :model => @chapter

.pblock.form
  = simple_form_for @chapter, :url => "/manage/chapters/#{@chapter.id}" do |f|
    .form-inputs
      = f.input :title, :input_html => {:class => :xxlarge}
      = f.input :desc, :input_html => {:rows => 6, :class => :xxlarge}
    .form-actions
      = f.button :submit, :class => 'success'
      %a.btn.cancel{:href => "/manage/courses/#{@course.id}"}= t('common.form.cancel')