- content_for :header do
  = render_cell :manage_courses_breadcrumb, :display
  .btns
    %a.btn.success{:href => '/manage/courses/new'}
      %i.icon-plus.icon-white
      %span 创建课程
    %a.btn.success{:href => '/manage/courses/import'}
      %i.icon-upload.icon-white
      %span 导入Excel
    %a.btn.success{:href => '/manage/courses/import_youku_list'}
      %i.icon-upload.icon-white
      %span 导入优酷列表
    %a.btn.success{:href => '/manage/courses/import_tudou_list'}
      %i.icon-upload.icon-white
      %span 导入土豆豆单


.page-manage-courses
  .pblock.filter
    = render_cell :layout, :manage_courses_filter, :query => @query

  .pblock.table
    = page_data_table(:courses, @courses, :striped, :bordered) do |table|
      - table.add_column(:id) do |course|
        = "##{course.id}"
      - table.add_column(:name) do |course|
        = link_to course.name, "/manage/courses/#{course.id}"
      - table.add_column(:cid)
      - table.add_column(:creator) do |course|
        = user_link course.creator
      - table.add_column(:'chapters-count') do |course|
        = course.chapters.count
        
      - if R::INHOUSE
        - table.add_column(:select_apply) do |course|
          - limit = course.have_apply_request_limit? ? course.apply_request_limit : '不限'
          %span #{course.apply_users.count}
          %span /
          %span #{limit}

      - table.add_column(:ops) do |course|

        - if R::INHOUSE
          %a.btn.mini{:href => "/manage/courses/#{course.id}/applies"}
            %i.icon-list-alt
            %span 选课管理

        %a.btn.mini{:href => "/manage/courses/#{course.id}/edit"}
          %i.icon-edit
          %span= t('common.edit')

        - params_str = params[:q].present? ? "?q=#{params[:q]}" : ""

        = link_to "/manage/courses/#{course.id}#{params_str}", :method => :delete, :confirm => t('common.delete_confirm'), :class => 'btn mini danger' do
          %i.icon-remove.icon-white
          %span= t('common.delete')

  = paginate @courses