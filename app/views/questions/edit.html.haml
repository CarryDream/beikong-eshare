- content_for :header do
  %h1 修改问题

= simple_form_for @question do |f|
  .form-inputs
    = f.input :title
    = f.input :content, :as => :text, :input_html => {:rows => 5, :class => 'xxlarge'}
  .form-actions
    = f.button :submit, :class => 'success'
    %a.btn.cancel{:href => "/questions/#{@question.id}"}= t('common.form.cancel')