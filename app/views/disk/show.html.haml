- content_for :header do
  %h1
    %a{:href => '/disk'} 文件共享
    %span / 
    %span 文件下载

.page-file-show
  .pblock
    %h3.file-name= @media_resource.name

    .attrs
      .attr
        .t 文件大小：
        .p= @media_resource.size_str
      .attr
        .t 上传时间：
        .p= @media_resource.fileops_time
      .attr
        .t 上传者：
        .p= user_link @media_resource.creator

    %a.btn.success{:href => "/disk/download?path=#{@media_resource.path}"}
      %i.icon-download.icon-white
      %span 点此下载文件

    %hr

    .page-tags{:data => {:'tagable-id' => @media_resource.id, :'tagable-type' => @media_resource.class.to_s}}
      .shower
        %i.icon-tags
        .tags
          - @media_resource.private_tags(current_user).each do |tag|
            %a.tag{:href => "/tags/file/#{tag.name}", :data => {:name => tag.name}}= tag.name
        %a.edit{:href => 'javascript:;'} 编辑标签
      .inputer{:style => 'display:none;'}
        %ul
          - @media_resource.private_tags(current_user).each do |tag|
            %li= tag.name
        .btns
          %a.yes.btn.small.success{:href => 'javascript:;'} 确定
          %a.no.btn.small{:href => 'javascript:;'} 取消