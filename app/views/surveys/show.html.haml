.page-survey-show
  .title=@survey.title
  .content=@survey.content
  .items
    .action
      = link_to '增加问题',"/surveys/#{@survey.id}/survey_items/new"
      - if !@survey.is_answered?(current_user)
        = link_to '回答问题', "/surveys/#{@survey.id}/survey_results/new"

  - @survey.survey_items.each do |item|
    .item
      .title=item.content+"[#{item.kind}]"
      - if item.is_choice?
        - item.choice_options.each do |option|  
          = option
      - elsif item.is_fill?
        - item.content_by_replace("____")
      - else
        - item.content