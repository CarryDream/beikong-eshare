.page-admin-users
  = paginate @users
  = page_progress_bar 10, :info, :striped, :active
  = page_progress_bar 20, :success, :striped, :active
  = page_progress_bar 30, :warning, :striped, :active
  = page_progress_bar 40, :danger, :striped, :active

  = page_data_table(:users, @users, :striped, :bordered) do |table|
    - table.add_line_data(:role)
    - table.add_column(:role)
    - table.add_column(:login)
    - table.add_column(:name)
    - table.add_column(:email)
    - table.add_column(:ops) do |user|
      - if !user.is_admin?
        = link_to t('common.user.edit'), [:edit, :admin, user], :class => :edit
        = link_to t('common.user.delete'), 'javascript:;', :class => :delete