- content_for :header do
  %h1= @course.name

.page-course-show
  .user-course-sign
    - if @course.signed_today?(current_user)
      已经签到
    - else
      %a.btn.primary.large{:href => 'javascript:;'} 签到

  = page_tile :chapters, @chapters do
    - add_left :title do |chapter|
      = link_to chapter.title, chapter
    - add_left :desc
    - add :items do |chapter|
      - chapter.course_wares.each do |cw|
        %a.item{:href => "/course_wares/#{cw.id}"}
          .line
          %i{:class => cw.kind}
          %span.title= cw.title