:ruby
  if @course.new_record?
    url = '/manage/courses'
    submit_label = '提交课程'
    teacher = @cur_user
  else
    url = "/manage/courses/#{@course.id}"
    submit_label = '确定修改'
    teacher = @course.creator
  end

= simple_form_for @course, :url => url do |f|
  .form-inputs
    = f.input :cid, :as => :hidden, :input_html => {:value => randstr}

    = f.input :name
    .creator
      %b.teacher 主讲人：
      %span= teacher.name

    .hour-credit
      = f.input :lesson_hour, :input_html => {:class => :small}
      = f.input :credit, :input_html => {:class => :small}

    .user-count
      = f.input :least_user_count, :input_html => {:class => :small, :value => 5}
      = f.input :most_user_count, :input_html => {:class => :small, :value => 20}

    .time-place
      = f.input :time
      = f.input :location

    .txt
      = f.input :syllabus,      :input_html => {:class => :xxlarge}
      = f.input :desc,          :input_html => {:rows => 6, :class => :xxlarge}
      = f.input :teach_content, :input_html => {:rows => 6, :class => :xxlarge}
      = f.input :teach_type,    :input_html => {:class => :xxlarge}

    .ccov
      = f.input :cover, :as => :file

  .form-actions
    = f.button :submit, submit_label, :class => 'success-flat'
    %a.btn.cancel.gray-flat{:href => '/manage/courses'}= t('common.form.cancel')