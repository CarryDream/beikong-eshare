.sign-up-form
  = simple_form_for User.new, :as => :user, :url => '/account', :remote => true do |f|
    .form-inputs
      = f.input :name, :placeholder => '姓名', :required => true
      = f.input :password, :placeholder => '密码', :required => true
    .form-actions
      = f.button :submit, t('common.sign-up'), :class => 'large sign-up'#, 'data-disable-with' => t('common.sign-uping')

.sign-res-info{:style => 'display:none;'}
  .info{:style => 'display:none;'}
    %i.icon-info-sign
    %span 提示信息
  .info.ok{:style => 'display:none;'}
    %i.icon-ok
    %span 注册成功