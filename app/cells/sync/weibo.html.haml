.page-sync-sites
  - if @user.is_binded_weibo?
    - info = @user.get_weibo_bind_info
    - name = info['name']
    - url = info['urls']['Weibo']
    .site.weibo
      .icon
      .name 新浪微博
      .user= link_to "（#{name}）", url

  - if @user.is_binded_github?
    - info = @user.get_github_bind_info
    - name = info['name']
    - url = info['urls']['GitHub']
    .site.github
      .icon
      .name GitHub
      .user= link_to "（#{name}）", url

  .setting
    %span 你可以
    %span= link_to '同步信息', '/account/sync'
    %span 到其他社交网站

